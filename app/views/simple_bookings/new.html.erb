<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-6 col-sm-offset-3">
      <div class="from-post">
        <h1>Haz tu reserva!</h1>
        <%= simple_form_for [@restaurant, @simple_booking] do |f| %>
          <div class="row">
            <div class="col-xs-6">
              <%= f.input :name, label: "Nombre" %>
            </div>
            <div class="col-xs-6">
              <%= f.input :last_name, label: "Apellido(s)" %>
            </div>
          </div>
          <div class="row">
            <div class="col-xs-6">
              <%= f.input :email, label: "Email" %>
            </div>
            <div class="col-xs-6">
              <%= f.input :phone, label: "Teléfono de contacto" %>
            </div>
          </div>
          <div class="row">
            <div class="col-xs-6">
              <%= f.input :time, label: "¿A qué hora?", as: :time %>
            </div>
            <div class="col-xs-6">
              <%= f.input :date, label: "¿Cuando?", as: :date, start_year: Date.today.year,
                                  end_year: Date.today.year + 12, discard_day: true,
                                  order: [:month, :year] %>
            </div>
          </div>
          <div class="row">
            <div class="col-xs-12">
               <%= f.submit "Reservar", class: "btn btn-primary"  %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
