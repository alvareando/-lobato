<div class="container-fluid">
  <div class="row">
    <div class="col-sm-4 col-sm-offset-4">
    <%= @user.email %>
    <%= @restaurant.name %>
    <%= link_to "Anadir Menu", new_menu_path, class: "btn btn-primary" %>
    </div>
  </div>
  <% @menus.each do |menu| %>
  <div class="col-sm-4">
    <%= menu.name %>
  </div>
  <div class="col-sm-8">
      <%= link_to "Anadir Plato a este menu", new_menu_dish_path(menu), class: "btn btn-primary" %>
      <% menu.dishes.each do |dish| %>
      <ul>
        <li><%= dish.name %></li>
        <li><%= dish.description %></li>
        <li><%= dish.price %></li>
      </ul>
      <% end %>
  </div>
    <% end %>
</div>
